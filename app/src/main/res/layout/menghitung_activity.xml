<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/hitung_tv"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/hitung"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hitungpertama_tv"
        android:layout_below="@id/hitung_tv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="1dp"
        android:text="@string/bli_per"
        android:gravity="center"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/hitungBil"
        android:layout_below="@id/hitungpertama_tv"
        android:layout_width="150dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/hitungkedua_tv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/hitungBil"
        android:layout_marginLeft="1dp"
        android:gravity="center"
        android:text="@string/bil_kedua"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/hitungBil2"
        android:layout_below="@id/hitungkedua_tv"
        android:layout_width="150dp"
        android:layout_marginLeft= "1dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_hitungJumlah"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_below="@id/hitungBil2"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="41dp"
        android:layout_marginLeft="130sp"
        android:text="@string/btn_hitung" />

    <TextView
        android:id="@+id/hasil_penjumlahan"
        android:layout_below="@id/btn_hitungJumlah"
        android:text="@string/tv_hasil"
        android:layout_marginLeft= "110dp"
        android:textSize="25sp"
        android:layout_height="70dp"
        android:layout_width="match_parent"/>

    <EditText
        android:id="@+id/hitung_hasil"
        android:layout_below="@id/hasil_penjumlahan"
        android:layout_width="150dp"
        android:layout_marginLeft= "137dp"
        android:layout_height="wrap_content" />


</RelativeLayout>